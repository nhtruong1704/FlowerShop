<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:background="@color/hong"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/antic"
                android:text="Thông tin đơn đặt hàng"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="25dp"
                android:fontFamily="@font/antic"
                android:textColor="#fff"
                android:textSize="18sp" />
        </LinearLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            app:civ_border_width="0dp"
            android:src="@drawable/_0"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:background="#fff"
        android:paddingEnd="20dp">

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nguoidung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/allfont_medium"
                android:text="Người Mua:"
              />
            <TextView
                android:id="@+id/txtnguoimua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_toRightOf="@id/nguoidung"
                android:fontFamily="@font/allfont_medium"
                android:text="Người Mua:"
                android:textStyle="bold"
                android:textColor="#000"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nguoiban"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/allfont_medium"
                android:text="Người Bán:"
                />
            <TextView
                android:id="@+id/txtnguoiban"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_toRightOf="@id/nguoiban"
                android:fontFamily="@font/allfont_medium"
                android:text="Người Bán:"
                android:textStyle="bold"
                android:textColor="#000"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/pttoan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/allfont_medium"
                android:text="Phương Thức Thanh Toán:"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_toRightOf="@id/pttoan"
                android:fontFamily="@font/allfont_medium"
                android:text="Tiền mặt"
                android:textStyle="bold"
                android:textColor="#000"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#fff"
            android:gravity="center_vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclesanpham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#fff"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/moneybag1"/>
            <TextView
                android:id="@+id/txttongtien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="Tổng Tiền"
                android:textStyle="bold"
                android:textColor="#111"
                android:layout_marginStart="15sp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>